<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

  <!-- Required base permission for any Foreground Service -->
  <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
  <!-- Required for foregroundServiceType="dataSync" on modern Android -->
  <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
  <!-- Mic is used when choosing system ASR; keep both flags -->
  <uses-permission android:name="android.permission.RECORD_AUDIO" />
  <!-- Needed on Android 13+ to show foreground notification -->
  <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

  <application
      android:allowBackup="true"
      android:label="WristLingo"
      android:supportsRtl="true"
      android:theme="@style/Theme.WristLingo">

    <activity
        android:name=".MainActivity"
        android:exported="true">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <service
        android:name=".TranslatorService"
        android:exported="false"
        android:foregroundServiceType="dataSync|microphone">
    </service>
  </application>

</manifest>
